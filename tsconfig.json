{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["typings"]
  },
  "include": ["app", "typings"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
